<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perulangan"
    android:background="@color/colorAccent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perulangan"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnwhile"
                    android:text="While"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/btndowhile"
                    android:background="#202020"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btndowhile"
                    android:layout_gravity="center"
                    android:text="Do While"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:background="#202020"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnfor"
                    android:layout_below="@+id/btndowhile"
                    android:layout_marginTop="20dp"
                    android:text="For"
                    android:layout_centerHorizontal="true"
                    android:background="#202020"
                    android:textColor="#FFFFFF"/>


        </RelativeLayout>

</LinearLayout>